{
  "compilerOptions": {
    "module": "CommonJS",              
    "target": "ESNext",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,             
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
